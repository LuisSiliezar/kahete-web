---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import SocialMediaItem from "../components/SocialMediaItem.astro";

const { username, title, about } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={username} description={about} />
  </head>
  <body>
    <Header />
    <section class="bg-neutral-900 text-white">
      <div class="py-8 px-4 mx-auto max-w-screen-xl sm:py-16 lg:px-6">
        <div class="mx-auto max-w-screen-sm text-center">
          <div class="flex justify-center items-center">
            <img
              class="rounded-full w-48 h-48"
              src="https://flowbite.s3.amazonaws.com/blocks/marketing-ui/avatars/bonnie-green.png"
              alt="{title}"
            />
          </div>
          <div class="p-5 lg:text-left">
            <h3 class="text-xl font-bold tracking-tight text-gray-900">
              <a href="#">{username}</a>
            </h3>
            <span>{title}</span>
            <p class="mt-3 mb-4 text-justify">
              {about}
            </p>
			<!-- SOCIALMEDIA -->
			<div>
				<SocialMediaItem />
			</div>
			<!-- /SOCIALMEDIA -->
          </div>
        </div>
      </div>
      <Footer />
    </section>
  </body>
  <!-- <style>
    * {
      border: 1px solid red;
    }
  </style> -->
</html>
